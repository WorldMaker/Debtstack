<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:Debtstack;assembly=Debtstack"
        Title="Debtstack" Height="450" Width="500">
    <Window.Resources>
        <my:Harness x:Key="Harness"/>
        <DataTemplate DataType="{x:Type my:TransactionState}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Transaction.Name}" FontWeight="DemiBold"/>
                <TextBlock Text="{Binding MonthAgo}" Grid.Row="1"/>
                <TextBlock Text="{Binding Remaining, StringFormat=c}" FontWeight="DemiBold" Grid.Column="1" Margin="5,0" TextAlignment="Right"/>
                <TextBlock Text="{Binding Transaction.Value, StringFormat=c}" Grid.Column="1" Grid.Row="1" Margin="5,0" TextAlignment="Right"/>
            </Grid>            
        </DataTemplate>
    </Window.Resources>
    <Grid DataContext="{StaticResource Harness}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Load" Command="{Binding Command.Load}"/>
        <ListBox ItemsSource="{Binding Transactions}" Grid.Row="1">
        </ListBox>
    </Grid>
</Window>